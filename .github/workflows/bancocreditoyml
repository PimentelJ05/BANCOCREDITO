name: Run Python Scripts Daily at 23:59

on:
  schedule:
    - cron: '59 23 * * *'  # Executa todo dia às 23:59 UTC

jobs:
  run-scripts:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout repository
      uses: actions/checkout@v2

    - name: Set up Python
      uses: actions/setup-python@v2
      with:
        python-version: '3.x'  # Especifique a versão do Python que você está usando

    - name: Install dependencies
      run: |
        pip install -r requirements.txt  

    - name: Run KOMMO.py
      run: python KOMMO.py  # Ajuste o nome do script conforme necessário

    - name: Run PIPE.py
      run: python PIPE.py  # Ajuste o nome do script conforme necessário
